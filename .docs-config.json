{
  "validation": {
    "checkLinks": true,
    "checkStructure": true,
    "checkDuplicates": true,
    "allowedExternalDomains": [
      "github.com",
      "vitest.dev",
      "nodejs.org",
      "expressjs.com",
      "mongodb.com",
      "auth0.com"
    ],
    "excludePatterns": [
      "docs/**/archive/**",
      "docs/archive/**",
      "**/*.tmp.md",
      "**/node_modules/**"
    ]
  },
  "structure": {
    "requiredDirectories": [
      "docs/00-Overview",
      "docs/01-Getting-Started",
      "docs/02-Architecture",
      "docs/03-Frontend",
      "docs/04-Backend",
      "docs/06-Guides",
      "docs/07-Standards",
      "docs/08-Contribution",
      "docs/09-Reports-and-History"
    ],
    "requiredFiles": [
      "docs/README.md",
      "docs/01-Getting-Started/getting-started.md",
      "docs/02-Architecture/architecture.md",
      "docs/04-Backend/api-reference.md",
      "docs/06-Guides/development-guide.md"
    ]
  },
  "quality": {
    "maxLineLength": 120,
    "requireHeadings": true,
    "checkSpelling": false,
    "enforceConsistentFormatting": true
  }
}